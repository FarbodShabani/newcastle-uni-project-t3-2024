<%- include('./partials/header'); %>
<h2 class="mt-3 mb-3 text-center">Please fill out the form</h2>
<!-- <div class="main-container"> -->
<form method="post" action="/form">
    <% formElements.forEach(element => { %>
  <div class="d-flex flex row justify-content-start align-items-end w-80">
    <h3 class="ms-5"><%= element.subGroupName %></h3>
  </div>
  <div
    class="mt-3 d-flex flex-row align-items-center justify-content-start flex-wrap align-content-center w-80 mx-auto"
  >
    <% element.inputsList.forEach(input => { %>

    <div class="mb-3 mx-1">
      <label for="<%= input.inputId %>" class="form-label"
        ><%= input.name %></label
      >
      <input type="text" class="form-control" id="<%= input.inputId %>" name="<%= input.inputId %>" />
    </div>

    <% }) %>
  </div>

  <% }) %>
  <div class="mb-5 d-flex flex row justify-content-end align-items-end w-90">
    <button type="submit" class=" btn btn-primary w-20 me-n5 xs-w-80">
      Submit
    </button>
  </div>
  
</form>

<!-- </div> -->
<%- include('./partials/footer'); %>
